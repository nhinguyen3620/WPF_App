<Window x:Class="TailorMadeTours.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TailorMadeTours"
        xmlns:views="clr-namespace:TailorMadeTours.UserControls"
        mc:Ignorable="d"
        Title="Tailor-made Tours"
        Height="700
        "
        Width="900
        "
        WindowStartupLocation="CenterScreen"
        FontSize="18">
  <StackPanel HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
    <TextBlock TextWrapping="Wrap"
               Text="Tailor-made Tours - Chicago
               "
               FontSize="24"
               FontWeight="Bold" />
    <TabControl MinHeight="680"
                Height="649">
      <TabItem Header="Tour Stops">
        <views:TourStopsView />
      </TabItem>
      <TabItem Header="Details">
        <views:DetailView />
      </TabItem>
      <TabItem Header="Weekly Calendar">
        <views:ScheduleView />
      </TabItem>
    </TabControl>
  </StackPanel>

</Window>
